<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:layout_width="@dimen/joy_base_width"
        android:layout_height="300dp"
        android:background="@drawable/joy_share_dialog_bg" />

    <LinearLayout
        android:layout_width="@dimen/joy_base_width"
        android:layout_height="300dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/id_dialog_public_account_save"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:src="@drawable/joy_save" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="微信公众号"
                android:textColor="@color/joygame_black"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/id_dialog_public_account_close"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:src="@drawable/joy_close_black" />
            </FrameLayout>

            <View
                android:id="@+id/l_account_base_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/id_dialog_public_account_close"
                android:background="@color/joygame_high_light_grey" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:id="@+id/id_dialog_public_account_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>