<?xml version="1.0" encoding="utf-8"?>
<com.kwad.sdk.core.view.KsAdContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ksad_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:ignore="RtlHardcoded">

    <com.kwad.sdk.core.page.widget.SafeTextureView
        android:id="@+id/ksad_video_texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <!--竖屏横版素材新样式-->
    <com.kwad.sdk.reward.widget.actionbar.ActionBarPortraitHorizontal
        android:id="@+id/ksad_actionbar_portrait_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!--横屏竖版素材新样式-->
    <com.kwad.sdk.reward.widget.actionbar.ActionBarLandscapeVertical
        android:id="@+id/ksad_actionbar_landscape_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.kwad.sdk.reward.widget.tailframe.TailFramePortraitHorizontal
        android:id="@+id/ksad_video_portrait_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.kwad.sdk.reward.widget.tailframe.TailFramePortraitVertical
        android:id="@+id/ksad_video_portrait_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.kwad.sdk.reward.widget.tailframe.TailFrameLandscapeHorizontal
        android:id="@+id/ksad_video_landscape_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.kwad.sdk.reward.widget.tailframe.TailFrameLandscapeVertical
        android:id="@+id/ksad_video_landscape_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ksad_ad_label_play_bar"
        android:layout_width="42dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ksad_ad_label_black" />

    <com.kwad.sdk.reward.widget.actionbar.ActionBarAppPortrait
        android:id="@+id/ksad_video_play_bar_app_portrait"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <com.kwad.sdk.reward.widget.actionbar.ActionBarAppLandscape
        android:id="@+id/ksad_video_play_bar_app_landscape"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <com.kwad.sdk.reward.widget.actionbar.ActionBarH5
        android:id="@+id/ksad_video_play_bar_h5"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/ksad_video_count_down"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ksad_video_btn_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:visibility="visible"
            tools:ignore="SpUsage"
            tools:text="10" />

        <ImageView
            android:id="@+id/ksad_video_reward_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ksad_video_reward_icon"
            android:visibility="gone"
            tools:ignore="SpUsage"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ksad_video_sound_switch"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/ksad_video_btn_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ksad_video_sound_selector" />

        <ImageView
            android:id="@+id/ksad_video_page_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ksad_video_btn_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ksad_video_page_close"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

</com.kwad.sdk.core.view.KsAdContainer>