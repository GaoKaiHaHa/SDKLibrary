<!--        android:background="@drawable/joy_btn_order_record_selector"-->
<!--        />-->

    <TextView
        android:id="@+id/customServiceTextView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/customServiceButton"
        app:layout_constraintLeft_toLeftOf="@+id/customServiceButton"
        app:layout_constraintRight_toRightOf="@+id/customServiceButton"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/joy_black"
        android:textSize="14sp"
        android:text="联系客服"

        />

    <TextView
        android:id="@+id/userPrivacyTextView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/customServiceTextView"
        app:layout_constraintLeft_toLeftOf="@+id/userAgreementButton"
        app:layout_constraintRight_toRightOf="@+id/userAgreementButton"
        android:gravity="center"
        android:textColor="@color/joy_black"
        android:textSize="14sp"
        android:text="用户协议"
        />

    <TextView
        android:id="@+id/privacyAgreementTextView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/customServiceTextView"
        app:layout_constraintLeft_toLeftOf="@+id/privacyAgreementButton"
        app:layout_constraintRight_toRightOf="@+id/privacyAgreementButton"
        android:gravity="center"
        android:textColor="@color/joy_black"
        android:textSize="14sp"
        android:text="隐私协议"
        />

