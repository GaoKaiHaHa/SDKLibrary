<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/joy_red">

    <ImageView
        android:id="@+id/borderView"
        android:layout_width="340dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1060:600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/joy_border_1060_600"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@+id/borderView"
        app:layout_constraintLeft_toLeftOf="@+id/borderView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/joy_btn_come_back"
        />

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@+id/borderView"
        app:layout_constraintLeft_toLeftOf="@+id/borderView"
        app:layout_constraintRight_toRightOf="@+id/borderView"
        android:layout_marginTop="30dp"
        android:src="@drawable/joy_title_help_center"
        />

    <Button
        android:id="@+id/customServiceButton"
        android:layout_width="70dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/titleImageView"
        app:layout_constraintLeft_toLeftOf="@+id/borderView"
        app:layout_constraintRight_toLeftOf="@+id/userAgreementButton"
        android:layout_marginTop="10dp"
        android:background="@drawable/joy_btn_custom_service_selector"
        />

    <Button
        android:id="@+id/userAgreementButton"
        android:layout_width="70dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@+id/customServiceButton"
        app:layout_constraintLeft_toRightOf="@+id/customServiceButton"
        app:layout_constraintRight_toLeftOf="@+id/privacyAgreementButton"
        android:background="@drawable/joy_btn_user_agreement_selector"
        />

    <Button
        android:id="@+id/privacyAgreementButton"
        android:layout_width="70dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@+id/customServiceButton"
        app:layout_constraintLeft_toRightOf="@+id/userAgreementButton"
        app:layout_constraintRight_toRightOf="@+id/borderView"
        android:background="@drawable/joy_btn_privacy_agreement_selector"
        />

