<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/joy_base_width"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:background="@drawable/joy_account_register_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <FrameLayout
                    android:id="@+id/k_account_register_back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/k_account_register_random"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">
                </FrameLayout>

            </RelativeLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/joy_inde_l_r_padding"
                android:paddingRight="@dimen/joy_inde_l_r_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/joy_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/joy_user_name" />

                    <com.JoyFramework.wight.ClearEditText
                        android:id="@+id/k_account_register_account_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入账号"
                        android:imeOptions="actionDone"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textColor="@color/joygame_light_grey"
                        android:textColorHint="@color/joygame_high_light_grey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/joy_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/joy_password" />

                    <com.JoyFramework.wight.ClearEditText
                        android:id="@+id/k_account_register_psw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789abcdefghijgklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textColor="@color/joygame_light_grey"
                        android:textColorHint="@color/joygame_high_light_grey"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/k_account_register_now"
                    android:layout_width="180dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/joy_login_btn_bg1"
                    android:gravity="center"
                    android:text="立即注册"
                    android:layout_gravity="center"
                    android:textColor="@color/joygame_black"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/k_account_register_tip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="注册账号即已阅读并同意服务协议和隐私声明"
                android:textColor="@color/joygame_light_grey"
                android:textSize="12sp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>