<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:background="@drawable/joy_base_border_shape"
    android:orientation="horizontal"
    android:paddingRight="10dp">

    <com.JoyFramework.wight.ClearEditText
        android:id="@+id/l_view_record_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:imeOptions="actionDone"
        android:paddingLeft="10dp"
        android:saveEnabled="false"
        android:singleLine="true"
        android:textColor="@color/joygame_black"
        android:textColorHint="@color/joygame_high_light_grey"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/l_view_record_drop_down"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:src="@drawable/joy_drop_down" />
</LinearLayout>