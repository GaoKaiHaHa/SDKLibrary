<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="313dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/ttos_moment_alert_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="35dp"
        android:paddingEnd="35dp">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:gravity="center"
            android:minHeight="28dp"
            android:textColor="@color/ttos_moment_font"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="SpUsage"
            tools:text="加入黑名单" />

        <TextView
            android:id="@+id/tv_alert_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="21dp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/ttos_moment_font"
            android:textSize="14dp"
            tools:text="即将取消关注，并且不再收到他的互动通知。" />

        <TextView
            android:id="@+id/tv_positive"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/ttos_moment_alert_positive_bg"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:textColor="@color/ttos_moment_white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/ttos_moment_alert_negative_bg"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:textColor="@color/ttos_moment_font"
            android:textSize="14dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_alert_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ttos_moment_alert_close" />

</FrameLayout>